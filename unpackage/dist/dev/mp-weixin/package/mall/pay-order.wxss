.page-wrap {
  padding: 0 30rpx 150rpx;
}
.page-wrap .address-card {
  border-radius: 10rpx;
  background: #fff;
  padding: 30rpx;
  margin-top: 30rpx;
}
.page-wrap .address-card-hd {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #222222;
}
.page-wrap .address-card-bd {
  margin-top: 20rpx;
  display: flex;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
.page-wrap .address-card-bd .name {
  max-width: 200rpx;
}
.page-wrap .address-card-bd .phone {
  margin-left: 20rpx;
}
.page-wrap .address-card-ft {
  margin-top: 10rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.page-wrap .address-card .no-address {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}
.page-wrap .address-card .no-address .icon {
  width: 60rpx;
  height: 60rpx;
}
.page-wrap .address-card .no-address .msg {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #222222;
  margin-top: 20rpx;
}
.page-wrap .goods-card {
  border-radius: 10rpx;
  background: #fff;
  margin-top: 30rpx;
}
.page-wrap .goods-card-hd {
  padding: 30rpx;
  display: flex;
}
.page-wrap .goods-card-hd .pic {
  width: 168rpx;
  height: 168rpx;
  border-radius: 10rpx;
  border: 1rpx solid #f4f4f4;
  box-sizing: border-box;
}
.page-wrap .goods-card-hd .info {
  width: calc(100% - 168rpx);
  box-sizing: border-box;
  padding-left: 20rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}
.page-wrap .goods-card-hd .info .title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #222222;
}
.page-wrap .goods-card-hd .info .type {
  margin-top: 20rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.page-wrap .goods-card-hd .info .price-num {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.page-wrap .goods-card-hd .info .price-num .price {
  font-size: 28rpx;
  font-family: SourceHanSansCN;
  font-weight: bold;
  color: #ff4f4d;
}
.page-wrap .goods-card-hd .info .price-num .num {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.page-wrap .goods-card-bd {
  padding: 30rpx;
  border-top: 1rpx solid #eeeeee;
  display: flex;
  justify-content: flex-end;
}
.page-wrap .goods-card-bd .total {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.page-wrap .goods-card-bd .total text {
  color: #222222;
  font-size: 28rpx;
  font-weight: bolder;
}
.page-wrap .note-card {
  padding: 30rpx;
  border-radius: 10rpx;
  background: #fff;
  margin-top: 30rpx;
}
.page-wrap .note-card-hd {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #222222;
}
.page-wrap .note-card-bd {
  margin-top: 30rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  padding: 30rpx 30rpx 10rpx;
}
.page-wrap .note-card-bd textarea {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
  line-height: 27rpx;
}
.page-wrap .note-card-bd .note-num {
  text-align: right;
  margin-top: 10rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #b3b3b3;
}
.page-wrap .info-card {
  border-radius: 10rpx;
  background: #fff;
  margin-top: 30rpx;
  padding: 10rpx 0;
}
.page-wrap .info-card .row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #222222;
}
.page-wrap .info-card .row .right .bold {
  font-weight: bold;
}
.page-wrap .info-card .row .right .gray {
  color: #999999;
}
.page-wrap .info-card .rule-btn {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.page-wrap .bt-fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  width: 100%;
  height: 120rpx;
  background: #fff;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.page-wrap .bt-fixed .total-money {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #222222;
}
.page-wrap .bt-fixed .total-money text {
  font-size: 24rpx;
  font-family: SourceHanSansCN;
  font-weight: bold;
  color: #ff0000;
}
.page-wrap .bt-fixed .total-money text text {
  font-size: 32rpx;
}
.page-wrap .bt-fixed .buy-btn {
  width: 216rpx;
  height: 66rpx;
  background: #000000;
  border-radius: 5rpx;
  text-align: center;
  line-height: 66rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #ffffff;
}
.page-wrap .rule-pop {
  width: 570rpx;
  border-radius: 10rpx;
  background: #fff;
  padding: 0 30rpx 30rpx;
}
.page-wrap .rule-pop-hd {
  padding: 30rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
.page-wrap .rule-pop-bd {
  max-height: 50vh;
}
.page-wrap .rule-pop-bd .content {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
  line-height: 44rpx;
}
.page-wrap .rule-pop-ft {
  margin: 50rpx auto 0;
  width: 327rpx;
  height: 66rpx;
  background: #000000;
  border-radius: 33rpx;
  line-height: 66rpx;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #ffffff;
}

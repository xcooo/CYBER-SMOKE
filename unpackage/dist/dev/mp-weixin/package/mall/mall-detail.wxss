.page-wrap {
  padding-bottom: 128rpx;
}
.page-wrap .nav-left {
  display: flex;
  align-items: center;
}
.page-wrap .nav-left .icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
}
.page-wrap .nav-bar {
  position: fixed;
  left: 0;
  top: 0;
  background: transparent;
  z-index: 888;
  width: 100%;
}
.page-wrap .nav-bar-content {
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 30rpx;
}
.page-wrap .nav-bar-content .header-btn {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.5);
  border: 2rpx solid #f3eeec;
  border-radius: 999rpx;
  padding: 0 10rpx 0 5rpx;
}
.page-wrap .nav-bar-content .header-btn .btn {
  padding: 4rpx;
  width: 40rpx;
  height: 40rpx;
  box-sizing: content-box;
  display: flex;
  justify-content: center;
  align-items: center;
}
.page-wrap .nav-bar-content .header-btn .btn.icon {
  width: 34rpx;
  height: 34rpx;
}
.page-wrap .nav-bar-content .header-btn .line {
  width: 2rpx;
  height: 20rpx;
  background: #999999;
  margin-left: 10rpx;
  margin-right: 20rpx;
}
.page-wrap .swiper-wrap {
  width: 100%;
  height: 750rpx;
  position: relative;
}
.page-wrap .swiper-wrap swiper {
  width: 100%;
  height: 100%;
}
.page-wrap .swiper-wrap .swiper-bt {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 2;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.page-wrap .swiper-wrap .swiper-bt .list-wrap {
  width: 500rpx;
}
.page-wrap .swiper-wrap .swiper-bt .list-wrap-content {
  display: inline-block;
}
.page-wrap .swiper-wrap .swiper-bt .list-wrap-content .img-list {
  display: flex;
  align-items: center;
}
.page-wrap .swiper-wrap .swiper-bt .list-wrap-content .img-list .pic {
  width: 70rpx;
  height: 70rpx;
  border: 2rpx solid #fff;
}
.page-wrap .swiper-wrap .swiper-bt .list-wrap-content .img-list .pic.act {
  border-color: #000;
}
.page-wrap .swiper-wrap .swiper-bt .list-wrap-content .img-list .pic + .pic {
  margin-left: 10rpx;
}
.page-wrap .swiper-wrap .swiper-bt .swiper-index {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 999rpx;
  padding: 4rpx 20rpx;
  color: #fff;
  font-size: 26rpx;
}
.page-wrap .goods-info {
  padding: 30rpx;
  background: #fff;
}
.page-wrap .goods-info-hd {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.page-wrap .goods-info-hd .price {

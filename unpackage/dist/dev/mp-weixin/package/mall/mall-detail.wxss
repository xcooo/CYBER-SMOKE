  font-weight: bold;
  color: #222222;
  line-height: 30rpx;
}
.page-wrap .goods-tag-item .icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 4rpx;
}
.page-wrap .choose-info {
  background: #fff;
  padding: 30rpx;
}
.page-wrap .choose-info .row {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  color: #999999;
}
.page-wrap .choose-info .row .title {
  width: 150rpx;
}
.page-wrap .choose-info .row .right {
  flex: 1;
  display: flex;
  align-items: center;
}
.page-wrap .choose-info .row .right .icon {
  width: 40rpx;
  height: 40rpx;
}
.page-wrap .choose-info .row + .row {
  margin-top: 30rpx;
}
.page-wrap .detail {
  font-size: 26rpx;
  font-family: PingFang SC;
  color: #222222;
  line-height: 43rpx;
  background: #fff;
}

  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.page-wrap .goods-info-hd .want {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.page-wrap .goods-info-bd {

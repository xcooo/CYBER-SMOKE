.page-wrap {
  padding-bottom: 40rpx;
}
.page-wrap .tab-wrap {
  background: #fff;
  height: 88rpx;
}
.page-wrap .tab-wrap .tab-content {
  display: inline-block;
  height: 100%;
}
.page-wrap .tab-wrap .tab-content .tab-list {
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.page-wrap .tab-wrap .tab-content .tab-list-item {
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: #faeeee;
  white-space: nowrap;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.page-wrap .tab-wrap .tab-content .tab-list-item.act {
  background: #fe2b22;
  color: #fff;
}
.page-wrap .tab-wrap .tab-content .tab-list-item + .tab-list-item {
  margin-left: 15rpx;
}
.page-wrap .list {
  padding: 1rpx 0 0;
}
.page-wrap .list-item {
  padding: 30rpx 50rpx 40rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
.page-wrap .list-item-hd {
  display: flex;
  align-items: center;
}
.page-wrap .list-item-hd .avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 10rpx;
}
.page-wrap .list-item-hd .name {
  width: 250rpx;
  padding-left: 28rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
.page-wrap .list-item-bd {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.page-wrap .list-item-bd .goods-name {
  flex: 1;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
  line-height: 36rpx;
}
.page-wrap .list-item-bd .goods-name text {
  padding: 0 10rpx;
}
.page-wrap .list-item-ft {
  margin-top: 30rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  color: #333333;
}
.page-wrap .list-item .img-list {
  display: flex;
  padding: 1rpx 0 0;
  flex-flow: row wrap;
}
.page-wrap .list-item .img-list-item {
  width: 140rpx;
  height: 140rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}

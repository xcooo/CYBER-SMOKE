.btn-list {
  padding: 20rpx;
  display: flex;
}
.btn-list .btn {
  color: #909195;
  flex: 1;
  text-align: center;
  font-size: 18px;
}
.btn-list .active {
  color: #6c58dc;
  font-weight: 700;

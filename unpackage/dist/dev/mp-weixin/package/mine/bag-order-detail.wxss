.page-wrap {
  background: url("https://img.alicdn.com/imgextra/i4/2200676927379/O1CN01unkdtT24NdWplMdw8_!!2200676927379.png") no-repeat;
  background-size: 100vw 100%;
  background-repeat: no-repeat;
  min-height: 100vh;
  padding: 0 0 30rpx;
}
.page-wrap .top-card {
  padding: 30rpx 30rpx 0;
  background-size: 100% 60%;
}
.page-wrap .top-card-hd {
  font-size: 40rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #fff;
}
.page-wrap .top-card-hd .msg {
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #999;
  margin-top: 10rpx;
}
.page-wrap .top-card-bd {
  -webkit-transform: translateY(40rpx);
          transform: translateY(40rpx);
  margin-top: 0rpx;
  padding: 40rpx 25rpx;
  border-radius: 20rpx;
  background: #313131;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.page-wrap .top-card-bd .icon {
  width: 48rpx;
  height: 48rpx;
}
.page-wrap .top-card-bd .address-info {
  width: calc(100% - 50rpx);
  padding-left: 20rpx;
  box-sizing: border-box;
}
.page-wrap .top-card-bd .address-info .name-phone {
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #fff;
  display: flex;
}
.page-wrap .top-card-bd .address-info .name-phone view:nth-of-type(2) {
  margin-left: 30rpx;
}
.page-wrap .top-card-bd .address-info .address {
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #999999;
  margin-top: 20rpx;
}
.page-wrap .goods-wrap {
  padding: 0 30rpx;
  margin-top: 60rpx;
}
.page-wrap .goods-card {
  margin: 20rpx auto 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  background: #313131;
  padding: 30rpx;
  display: flex;
}
.page-wrap .goods-card .pic {
  width: 168rpx;
  height: 168rpx;
  border-radius: 10rpx;
  border: 1rpx solid #f4f4f4;
  box-sizing: border-box;
}
.page-wrap .goods-card .info {
  width: calc(100% - 168rpx);
  box-sizing: border-box;
  padding-left: 20rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}
.page-wrap .goods-card .info .title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
}
.page-wrap .goods-card .info .type {
  margin-top: 20rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.page-wrap .goods-card .info .price-num {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.page-wrap .goods-card .info .price-num .price {
  font-size: 28rpx;
  font-family: SourceHanSansCN;
  font-weight: bold;
  color: #ff4f4d;
}
.page-wrap .goods-card .info .price-num .num {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
}
.page-wrap .info-card {
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  background: #ffffff;
  width: 690rpx;
  box-sizing: border-box;
  margin: 20rpx auto 0;
}
.page-wrap .info-card .info-title {
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #222222;
  padding: 15rpx 0;
}
.page-wrap .info-card .row {
  display: flex;
  padding: 15rpx 0;
  align-items: center;
}
.page-wrap .info-card .row .label {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #222222;
  width: 150rpx;
}
.page-wrap .info-card .row .right {
  flex: 1;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #222222;
  display: flex;
  align-items: center;
}
.page-wrap .info-card .row .right .btn {
  padding: 5rpx 18rpx;
  background: #222222;
  border-radius: 999px;
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #ffffff;
  margin-left: 20rpx;
}

page {
  background-color: #222333;
}
 .mescroll-body {
  background-color: #222333;
}
.page-wrap-hd {
  position: fixed;
  z-index: 10;
  left: 0;
  top: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 0 0;
  background-color: #222333;
}
.page-wrap-hd .money-card {
  width: 690rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 50rpx 0 40rpx;
  background: linear-gradient(0deg, #313236, #44444e);
  border-radius: 10rpx;
}
.page-wrap-hd .money-card-item {
  width: 30%;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: space-between;
}
.page-wrap-hd .money-card-item .num {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #ffffff;
  word-wrap: break-word;
  word-break: break-all;
}
.page-wrap-hd .money-card-item .title {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
  margin: 20rpx 0;
}
.page-wrap-hd .money-card-item .btn {
  display: flex;
  align-items: center;
  padding-left: 10rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #ffffff;
}
.page-wrap-hd .tab-wrap {
  width: 100%;
  height: 88rpx;
}
.page-wrap .list {
  padding: 1rpx 30rpx 40rpx;
}
.page-wrap .list-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #ffffff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  background-color: #222333;
}
.page-wrap .list-item .icon {
  width: 50rpx;
  height: 50rpx;
}
.page-wrap .list-item .info {
  flex: 1;
  padding: 0 30rpx;
}
.page-wrap .list-item .info .title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
}
.page-wrap .list-item .info .time {
  margin-top: 16rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.page-wrap .list-item .num {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #6c5bde;
}

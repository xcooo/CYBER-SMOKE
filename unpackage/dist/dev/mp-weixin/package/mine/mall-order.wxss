.page-wrap  .mescroll-body {
  background-color: #222333 !important;
}
.page-wrap .tab-list {
  background: #fff;
  height: 88rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  z-index: 10;
  background: url("https://img.alicdn.com/imgextra/i4/2200676927379/O1CN01unkdtT24NdWplMdw8_!!2200676927379.png") no-repeat;
  background-size: 100% 100%;
  background: #222333;
}
.page-wrap .tab-list-item {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
  transition: all 0.3s;
}
.page-wrap .tab-list-item.act {
  font-size: 32rpx;
  font-weight: bold;
  color: #6b57dc;
}
.page-wrap .btn-list-wrap {
  width: 100%;
  height: 88rpx;
  position: fixed;
  z-index: 10;
  left: 0;
  box-sizing: border-box;
  padding: 0 30rpx;
  background: #fff;
}
.page-wrap .btn-list-wrap-content {
  display: inline-block;
  height: 100%;
}
.page-wrap .btn-list-wrap-content .btn-list {
  display: flex;
  align-items: center;
  height: 100%;
}
.page-wrap .btn-list-wrap-content .btn-list-item {
  width: 122rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 5rpx;
  line-height: 60rpx;
  text-align: center;
  box-sizing: border-box;
  border: 1rpx solid #f5f5f5;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.page-wrap .btn-list-wrap-content .btn-list-item.act {
  border-color: #333333;
  background: #fff;
}
.page-wrap .btn-list-wrap-content .btn-list-item + .btn-list-item {
  margin-left: 20rpx;
}
.page-wrap .list {
  padding: 1rpx 30rpx 40rpx;
}
.page-wrap .list-item {
  border-radius: 10rpx;
  background: #fff;
  padding: 30rpx;
  margin-top: 30rpx;
}
.page-wrap .list-item-hd {
  display: flex;
  padding-bottom: 30rpx;
}
.page-wrap .list-item-hd .pic {
  width: 166rpx;
  height: 166rpx;
  box-sizing: border-box;
  border: 1rpx solid #f7f7f7;
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
}
.page-wrap .list-item-hd .info {
  width: calc(100% - 166rpx);
  box-sizing: border-box;
  padding-left: 30rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}
.page-wrap .list-item-hd .info .title {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.page-wrap .list-item-hd .info .price-num {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.page-wrap .list-item-hd .info .price-num .price {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #e82929;
}
.page-wrap .list-item-hd .info .price-num .num {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.page-wrap .list-item-bd {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999999;
}
.page-wrap .list-item-ft {
  padding-top: 30rpx;
  display: flex;
  justify-content: flex-end;
}
.page-wrap .list-item-ft .btn {
  width: 180rpx;
  height: 66rpx;
  background: #000000;
  border-radius: 999rpx;
  box-sizing: border-box;
  line-height: 66rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
}
.page-wrap .list-item-ft .btn.yellow {
  background: #f7a631;
}
.page-wrap .list-item-ft .btn.red {
  background: #f22222;
}
.page-wrap .list-item-ft .btn + .btn {
  margin-left: 25rpx;
}

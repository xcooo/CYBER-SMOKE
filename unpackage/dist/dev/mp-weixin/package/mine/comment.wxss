.page-wrap-hd {
  padding: 30rpx;
  background: #fff;
}
.page-wrap-hd .goods-title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
.page-wrap-hd .rate {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}
.page-wrap-hd .rate-wrap {
  padding: 0 20rpx;
}
.page-wrap-bd {
  padding: 30rpx;
  background: #fff;
}
.page-wrap-bd .title-num {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.page-wrap-bd .title-num .title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.page-wrap-bd .title-num .title text {
  color: #cc0000;
  margin-right: 10rpx;
}
.page-wrap-bd .title-num .num {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.page-wrap-bd textarea {
  margin-top: 30rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
  width: 100%;
}
.page-wrap-bd .img-list {
  display: flex;
  flex-flow: row wrap;
  margin-top: 30rpx;
}
.page-wrap-bd .img-list-item {
  width: 120rpx;
  height: 120rpx;
  background: #fafafa;
  box-sizing: border-box;
  position: relative;
  margin-right: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.page-wrap-bd .img-list-item .icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
}
.page-wrap-bd .img-list-item.upload {
  padding: 20rpx;
}
.page-wrap-ft {
  padding: 30rpx;
  display: flex;
  align-items: center;
  background: #fff;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.page-wrap-ft .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.page-wrap .submit-btn {
  width: 690rpx;
  height: 88rpx;
  background: #000;
  border-radius: 999rpx;
  line-height: 88rpx;
  text-align: center;
  position: fixed;
  left: 30rpx;
  bottom: 40rpx;
  z-index: 10;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #ffffff;
}

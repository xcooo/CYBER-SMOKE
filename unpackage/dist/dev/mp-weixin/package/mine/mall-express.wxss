.page-wrap {
  padding-bottom: 40rpx;
}
.page-wrap ._img {
  width: 100%;
  height: 100%;
}
.page-wrap .hd-info {
  padding: 30rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  width: 690rpx;
  margin: 30rpx auto 0;
  border-radius: 10rpx;
}
.page-wrap .hd-info .img {
  width: 160rpx;
  height: 160rpx;
  background: #dddddd;
  border: 1rpx solid #eeeeee;
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
}
.page-wrap .hd-info .img-tip {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 36rpx;
  background: #000;
  text-align: center;
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #ffffff;
  line-height: 36rpx;
}
.page-wrap .hd-info .info {
  width: calc(100% - 160rpx);
  box-sizing: border-box;
  padding-left: 20rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}
.page-wrap .hd-info .info .status {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #333333;
}
.page-wrap .hd-info .info .status text {
  color: #E41440;
}
.page-wrap .hd-info .info .company,
.page-wrap .hd-info .info .order-num {
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #999999;
}
.page-wrap .hd-info .info .order-num {
  display: flex;
  align-items: center;
}
.page-wrap .hd-info .info .order-num .copy {
  margin-left: 20rpx;
  padding: 3rpx 10rpx;
  background: #333333;
  border-radius: 99px;
  font-size: 20rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #ffffff;
}
.page-wrap .list-wrap {
  padding: 30rpx;
  background: #fff;
  width: 690rpx;
  margin: 0 auto;
  border-radius: 10rpx;
}
.page-wrap .no-express {
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

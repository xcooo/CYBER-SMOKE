.page-wrap {
  padding: 0 30rpx 40rpx;
}
.page-wrap .log-list {
  padding: 1rpx 0 0;
}
.page-wrap .log-list-item {
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  background: #fff;
  margin-top: 20rpx;
  position: relative;
}
.page-wrap .log-list-item .status {
  font-size: 26rpx;
  color: #999;
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  z-index: 1;
}
.page-wrap .log-list-item .status.act {
  color: #ff3333;
}
.page-wrap .log-list-item .row {
  display: flex;
  font-size: 26rpx;
  color: #333;
}
.page-wrap .log-list-item .row-title {
  width: 140rpx;
}
.page-wrap .log-list-item .row .right {
  flex: 1;
  color: #666;
}
.page-wrap .log-list-item .row .right .img-list {
  display: flex;
}
.page-wrap .log-list-item .row .right .img-list-item {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.page-wrap .log-list-item .row + .row {
  margin-top: 20rpx;
}

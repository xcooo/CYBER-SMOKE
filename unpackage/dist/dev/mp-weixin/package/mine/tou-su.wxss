.page-wrap {
  padding-bottom: 40rpx;
}
.page-wrap .row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #fff;
}
.page-wrap .row .title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.page-wrap .row .title text {
  color: #cc0000;
}
.page-wrap .row .right {
  color: #666666;
  display: flex;
  align-items: center;
}
.page-wrap .row .right .input-box input {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
  text-align: right;
}
.page-wrap .question-content {
  background: #fff;
}
.page-wrap .question-content textarea {
  padding: 10rpx 30rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
}
.page-wrap .question-content .img-list {
  display: flex;
  flex-flow: row wrap;
  padding: 30rpx;
}
.page-wrap .question-content .img-list-item {
  width: 120rpx;
  height: 120rpx;
  background: #fafafa;
  box-sizing: border-box;
  position: relative;
  margin-right: 25rpx;
}
.page-wrap .question-content .img-list-item .icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
}
.page-wrap .question-content .img-list-item.upload {
  padding: 20rpx;
}
.page-wrap .submit-btn {
  width: 690rpx;
  height: 88rpx;
  background: #000000;
  border-radius: 44rpx;
  margin: 50rpx auto 0;
  text-align: center;
  line-height: 88rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #ffffff;
}
.page-wrap .log-btn {
  margin: 30rpx auto 0;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
  text-align: center;
}

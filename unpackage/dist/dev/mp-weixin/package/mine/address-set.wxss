.page-wrap .form-item {
  padding: 0 30rpx;
  height: 100rpx;
  background: #ffffff;
}
.page-wrap .form-item-content {
  height: 100%;
  display: flex;
  align-items: center;
}
.page-wrap .form-item-content.border {
  border-top: 1px solid #eeeeee;
}
.page-wrap .form-item-content .label {
  width: 166rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #222222;
}
.page-wrap .form-item-content .right {
  width: calc(100% - 166rpx);
  display: flex;
  align-items: center;
}
.page-wrap .form-item-content .right input,
.page-wrap .form-item-content .right textarea {
  flex: 1;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #333333;
}
.page-wrap .form-item-content .right .icon {
  width: 32rpx;
  height: 32rpx;
}
.page-wrap .textarea {
  height: auto;
  padding: 0 30rpx;
}
.page-wrap .textarea .form-item-content {
  padding: 30rpx 0;
  align-items: flex-start;
}
.page-wrap .textarea .form-item-content .right textarea {
  height: 200rpx;
}
.page-wrap .default .form-item-content {
  justify-content: space-between;
}
.page-wrap .default .form-item-content .label {
  width: 100%;
}
.page-wrap .default .form-item-content .right {
  width: auto;
}
.page-wrap .save-btn {
  margin: 88rpx auto;
  width: 690rpx;
  height: 88rpx;
  background: #000;
  border-radius: 888rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #ffffff;
}

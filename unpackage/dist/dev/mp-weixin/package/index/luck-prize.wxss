.page-wrap .all-type {
  width: 100%;
  height: 88rpx;
  align-items: center;
  background: #fff;
  box-sizing: border-box;
  display: flex;
  justify-content: space-evenly;
}
.page-wrap .all-type-item {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.page-wrap .all-type-item text {
  color: #ee5c5e;
}
.page-wrap .notice {
  background: #fff;
  padding: 6rpx 0;
}
.page-wrap .bao-list {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  padding: 1rpx 30rpx 40rpx;
}
.page-wrap .bao-list-item {
  width: 340rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #ffffff;
  margin-top: 20rpx;
}
.page-wrap .bao-list-item .pic {
  height: 340rpx;
  position: relative;
}
.page-wrap .bao-list-item .pic .tag {
  position: absolute;
  left: 10rpx;
  bottom: 0;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  background: #f43336;
  -webkit-transform: skew(-14deg);
          transform: skew(-14deg);
}
.page-wrap .bao-list-item .pic .tag view {
  -webkit-transform: skew(14deg);
          transform: skew(14deg);
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #ffffff;
}
.page-wrap .bao-list-item .name {
  padding: 10rpx 15rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.page-wrap .bao-list-item .price-num {
  padding: 0 15rpx 10rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
}
.page-wrap .bao-list-item .price-num .price {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.page-wrap .bao-list-item .price-num .price text {
  font-weight: bold;
  padding-left: 6rpx;
  font-size: 24rpx;
  color: #f67a29;
}
.page-wrap .bao-list-item .price-num .price text text {
  font-size: 32rpx;
}
.page-wrap .bao-list-item .price-num .num {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}

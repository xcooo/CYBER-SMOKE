.page-wrap {
  min-height: 100vh;
  background: #fff;
}
.page-wrap .uni-navbar__content {
  z-index: 10;
}
.page-wrap-hd {
  position: relative;
  height: 474rpx;
}
.page-wrap-hd .rule-btn {
  width: 91rpx;
  height: 50rpx;
  background: linear-gradient(0deg, #f3dcf8 0%, #f7f5fe 99%);
  border-radius: 5rpx 5rpx 0rpx 0rpx;
  position: absolute;
  right: 60rpx;
  bottom: 40rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #b36ae9;
}
.page-wrap .list {
  padding: 1rpx 30rpx 40rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  border-radius: 40rpx 40rpx 0 0;
  position: relative;
  z-index: 1;
  margin-top: -40rpx;
  background: #fff;
}
.page-wrap .list-item {
  width: 340rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #ffffff;
  margin-top: 30rpx;
}
.page-wrap .list-item .pic {
  height: 340rpx;
}
.page-wrap .list-item .tag-list {
  padding: 1rpx 15rpx 0;
  display: flex;
  flex-flow: row wrap;
}
.page-wrap .list-item .tag-list-item {
  border-radius: 5rpx;
  overflow: hidden;
  margin-right: 10rpx;
  margin-top: 10rpx;
  height: 40rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #eb989c;
  border: 1rpx solid #eb989c;
}
.page-wrap .list-item .tag-list-item.zheng {
  color: #fff;
  background: #333333;
  border: none;
}
.page-wrap .list-item .name {
  padding: 10rpx 15rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.page-wrap .list-item .price-num {
  padding: 0 15rpx 10rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
}
.page-wrap .list-item .price-num .price {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
.page-wrap .list-item .price-num .price text {
  font-size: 32rpx;
}
.page-wrap .list-item .price-num .price text text {
  margin-left: 10rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  text-decoration: line-through;
  color: #999999;
}
.page-wrap .list-item .price-num .num {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.page-wrap .rule-pop {
  width: 570rpx;
  border-radius: 10rpx;
  background: #fff;
  padding: 0 30rpx 30rpx;
}
.page-wrap .rule-pop-hd {
  padding: 30rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
.page-wrap .rule-pop-bd {
  max-height: 50vh;
}
.page-wrap .rule-pop-bd .content {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
  line-height: 44rpx;
}
.page-wrap .rule-pop-ft {
  margin: 50rpx auto 0;
  width: 327rpx;
  height: 66rpx;
  background: #000000;
  border-radius: 33rpx;
  line-height: 66rpx;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #ffffff;
}

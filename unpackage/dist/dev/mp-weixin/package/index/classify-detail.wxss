.page-wrap {
  background: url("https://img.alicdn.com/imgextra/i4/2200676927379/O1CN01unkdtT24NdWplMdw8_!!2200676927379.png") no-repeat;
  background-size: 100% 100%;
  min-height: calc(100vh - 50px);
}
.page-wrap .status-bar {
  background: #222333;
  color: #fff;
}
.page-wrap-header {
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 10rpx;
  background: #222333;
  color: #fff;
}
.page-wrap-header .input-box {
  margin-left: 20rpx;
  border-radius: 999rpx;
  background: #f6f5f5;
  width: 400rpx;
  height: 56rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #b2b2b2;
}
.page-wrap-header .input-box .icon {
  width: 50rpx;
  height: 50rpx;
}
.page-wrap .tab-list {
  padding: 0 30rpx;
  justify-content: space-between;
  align-items: center;
  display: flex;
  height: 88rpx;
  background: #fff;
  background: #222333;
  color: #fff;
}
.page-wrap .tab-list-item {
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
}
.page-wrap .tab-list-item .sort {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
}
.page-wrap .tab-list-item .sort .icon {
  width: 12rpx;
  height: 12rpx;
}
.page-wrap .tab-list-item .sort .icon + .icon {
  margin-top: 2rpx;
}
.page-wrap .tab-list-item.act {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #7368b4;
}
.page-wrap .goods-list {
  display: flex;
  justify-content: space-between;
  padding: 14rpx 30rpx 10rpx;
}
.page-wrap .goods-list-col-item {
  width: 340rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  background: url("https://img.alicdn.com/imgextra/i2/2200676927379/O1CN01vFdlQI24Ndcoy7iug_!!2200676927379.png") no-repeat no-repeat;
  background-size: 100% 100%;
  padding-bottom: 30rpx;
}
.page-wrap .goods-list-col-item .pic {
  height: 340rpx;
  margin-bottom: 20rpx;
}
.page-wrap .goods-list-col-item .tag-list {
  padding: 1rpx 15rpx 0;
  display: flex;
  flex-flow: row wrap;
}
.page-wrap .goods-list-col-item .tag-list-item {
  border-radius: 5rpx;
  overflow: hidden;
  margin-right: 10rpx;
  margin-top: 10rpx;
  height: 40rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #eb989c;
  border: 2rpx solid #eb989c;
}
.page-wrap .goods-list-col-item .tag-list-item.zheng {
  color: #fff;
  background: #333333;
  border-color: #333333;
}
.page-wrap .goods-list-col-item .name {
  padding: 20rpx 30rpx;
  font-size: 16px;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
}
.page-wrap .goods-list-col-item .price-num {
  padding: 0rpx 30rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
}
.page-wrap .goods-list-col-item .price-num .price {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #edc736;
}
.page-wrap .goods-list-col-item .price-num .price text {
  font-size: 32rpx;
  margin-left: 5rpx;
}
.page-wrap .goods-list-col-item .price-num .price text text {
  margin-left: 10rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  text-decoration: line-through;
  color: #edc736;
}
.page-wrap .goods-list-col-item .price-num .num {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}

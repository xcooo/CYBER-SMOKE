.page-wrap {
  position: relative;
  padding-bottom: 40rpx;
}
.page-wrap-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 324rpx;
}
.page-wrap-hd {
  position: relative;
  z-index: 1;
  left: 0;
  top: 0;
  padding: 0 30rpx 0;
}
.page-wrap-hd .info {
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}
.page-wrap-hd .info .avatar {
  width: 135rpx;
  height: 135rpx;
  border-radius: 50%;
  background: #ccc;
  margin-top: -65rpx;
}
.page-wrap-hd .info .name {
  position: relative;
  margin-top: 20rpx;
  width: 170rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #051a2b;
  text-align: center;
}
.page-wrap-hd .info .name .id {
  position: absolute;
  left: 100%;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.page-wrap-hd .info .money-list {
  box-sizing: border-box;
  width: 100%;
  padding: 70rpx 0 40rpx;
  display: flex;
  justify-content: center;
}
.page-wrap-hd .info .money-list .fg {
  border: 1rpx solid #ccc;
  height: 100rpx;
  margin: auto;
}
.page-wrap-hd .info .money-list .recharge {
  height: 80rpx;
  border-radius: 15rpx;
  border: none;
  margin: auto;
  line-height: 80rpx;
}
.page-wrap-hd .info .money-list-item {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 39%;
}
.page-wrap-hd .info .money-list-item .num {
  font-size: 32rpx;
  font-family: SourceHanSansCN;
  font-weight: 800;
  color: #333333;
  word-wrap: break-word;
  word-break: break-all;
  text-align: center;
}
.page-wrap-hd .info .money-list-item .title {
  margin-top: 10rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.page-wrap .order-menu {
  width: 690rpx;
  margin: 30rpx auto 0;
  background: #fff;
  border-radius: 10rpx;
  padding: 30rpx 0;
}
.page-wrap .order-menu-hd {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #051a2b;
  padding: 0 30rpx;
}
.page-wrap .order-menu .menu-list {
  display: flex;
}
.page-wrap .order-menu .menu-list-item {
  width: 25%;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  margin-top: 20rpx;
  position: relative;
}
.page-wrap .order-menu .menu-list-item .dot {
  padding: 7rpx 10rpx;
  border-radius: 999rpx;
  background: #000;
  color: #fff;
  font-size: 20rpx;
  line-height: 20rpx;
  position: absolute;
  right: 20rpx;
  top: 0;
}
.page-wrap .order-menu .menu-list-item .icon {
  width: 80rpx;
  height: 80rpx;
}
.page-wrap .order-menu .menu-list-item .title {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.page-wrap .roll-tip {
  width: 690rpx;
  margin: 30rpx auto 0;
  border-radius: 10rpx;
  overflow: hidden;
  background: #fff;
}
.page-wrap .roll-tip .uni-noticebar {
  margin-bottom: 0;
  background: none !important;
}
.page-wrap .common-tools {
  width: 690rpx;
  margin: 30rpx auto 0;
  background: #fff;
  border-radius: 10rpx;
  padding: 30rpx 30rpx 0;
}
.page-wrap .common-tools-hd {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #051a2b;
}
.page-wrap .common-tools-bd .btn-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
}
.page-wrap .common-tools-bd .btn-item .title {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.cdkbox {
  width: 500rpx;
  background-color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}
.cdkbox .tit {
  text-align: center;
  margin-bottom: 35rpx;
}
.cdkbox .inp {
  border-radius: 16rpx;
  border: 1rpx solid #333;
  height: 60rpx;
}
.cdkbox button {
  border-radius: 8rpx;
  color: #fff;
  background-color: #00E1DB;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 25rpx;
  font-size: 28rpx;
}

.page-wrap-header {
  position: fixed;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  z-index: 10;
  height: 88rpx;
  padding: 0 30rpx 0 0;
  display: flex;
  align-items: center;
  background: #fff;
}
.page-wrap-header .tab-wrap {
  flex: 1;
}
.page-wrap-header .sort-btn {
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.page-wrap-header .sort-btn .icon {
  width: 16rpx;
  height: 16rpx;
  margin-left: 10rpx;
}
.page-wrap .goods-list {
  display: flex;
  justify-content: space-between;
  padding: 14rpx 30rpx 10rpx;
}
.page-wrap .goods-list-col-item {
  width: 340rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #ffffff;
  margin-bottom: 30rpx;
}
.page-wrap .goods-list-col-item .pic {
  height: 340rpx;
}
.page-wrap .goods-list-col-item .tag-list {
  padding: 1rpx 15rpx 0;
  display: flex;
  flex-flow: row wrap;
}
.page-wrap .goods-list-col-item .tag-list-item {
  border-radius: 5rpx;
  overflow: hidden;
  margin-right: 10rpx;
  margin-top: 10rpx;
  height: 40rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #eb989c;
  border: 2rpx solid #eb989c;
}
.page-wrap .goods-list-col-item .tag-list-item.zheng {
  color: #fff;
  background: #333333;
  border-color: #333333;
}
.page-wrap .goods-list-col-item .name {
  padding: 10rpx 15rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.page-wrap .goods-list-col-item .price-num {
  padding: 0 15rpx 10rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
}
.page-wrap .goods-list-col-item .price-num .price {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
.page-wrap .goods-list-col-item .price-num .price text {
  font-size: 32rpx;
}
.page-wrap .goods-list-col-item .price-num .price text text {
  margin-left: 10rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  text-decoration: line-through;
  color: #999999;
}
.page-wrap .goods-list-col-item .price-num .num {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.tanBox .off image {
  width: 70rpx;
  height: 70rpx;
  display: inline-block;
}
.tanBox {
  width: 600rpx;
  text-align: center;
}
.tanBox .pic image {
  width: 100%;
}

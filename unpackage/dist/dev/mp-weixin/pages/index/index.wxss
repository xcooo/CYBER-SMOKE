page {
  background-color: #f2faef;
}
.common-img {
  background: url("https://img.alicdn.com/imgextra/i1/2200676927379/O1CN01GYJhsN24Ndco7ktYR_!!2200676927379.png") no-repeat;
  background-size: 100vw 100%;
  background-repeat: no-repeat;
  padding-bottom: 150rpx;
}
.page-wrap {
  min-height: 100vh;
  background-color: #f2faef;
}
.page-wrap .status-bar {
  background-size: 100% auto;
  position: fixed;
  left: 0;
  width: 100%;
  box-sizing: border-box;
}
.page-wrap-header {
  height: 88rpx;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  background-size: 100% auto;
  position: fixed;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  z-index: 10;
}
.page-wrap-header .mall {
  position: relative;
  margin-right: 20rpx;
  font-size: 20px;
  font-weight: 700;
  color: #fff;
}
.page-wrap-header .mall::after {
  position: absolute;
  content: "";
  left: 50%;
  bottom: 0;
  width: 2.4375rem;
  height: 0.375rem;
  background: linear-gradient(90deg, rgba(143, 20, 204, 0.7) 0%, rgba(41, 68, 204, 0.7) 100%);
  -webkit-transform: translate(-50%);
          transform: translate(-50%);
}
.page-wrap-header .serach-mall {
  width: 500rpx;
  height: 60rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 4rpx solid;
  border-color: #fb7a01;
  border-radius: 40rpx;
}
.page-wrap-header .serach-mall .icon {
  width: 40rpx;
  height: 40rpx;
}
.page-wrap-header .input-box {
  background: #212231;
  width: 400rpx;
  height: 56rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #b2b2b2;
  border: 4rpx solid;
  border-image: linear-gradient(270deg, #039aff, #705cff, #af38ff) 2 2;
}
.page-wrap-header .input-box .icon {
  width: 30rpx;
  height: 30rpx;
}
.page-wrap .banner {
  width: 100%;
  height: 300rpx;
  margin: 30rpx auto 0;
  margin-top: 90rpx;
}
.page-wrap .banner swiper-item {
  display: flex;
  justify-content: center;
}
.page-wrap .banner swiper-item .swiper-pic {
  width: 690rpx;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}
.page-wrap .cate-wrap {
  display: flex;
  padding: 30rpx 30rpx;
}
.page-wrap .cate-wrap .cate-item {
  color: #ccc;
  font-size: 36rpx;
  font-weight: 700;
  flex: 1;
}
.page-wrap .cate-wrap .cate-item:last-child {
  margin-right: 0;
}
.page-wrap .cate-wrap .cate-item-active {
  color: #705cff;
  color: #fff;
}
.page-wrap .classify {
  width: 100%;
  height: 50rpx;
  margin-top: 40rpx;
}
.page-wrap .classify swiper-item {
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
}
.page-wrap .classify swiper-item .item {
  width: 106rpx;
}
.page-wrap .classify swiper-item .item-pic {
  width: 100%;
  height: 106rpx;
}
.page-wrap .classify swiper-item .item .title {
  font-size: 16px;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
  text-align: center;
  margin-top: 10rpx;
}
.page-wrap .classify swiper-item .item + .item {
  margin-left: 40rpx;
}
.page-wrap .dot-list {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
}
.page-wrap .dot-list-item {
  width: 10rpx;
  height: 10rpx;
  background: #e1e1e1;
  border-radius: 100rpx;
  margin: 0 4rpx;
  transition: all 0.3s;
}
.page-wrap .dot-list-item.act {
  width: 20rpx;
  background: #000000;
}
.page-wrap .card-list {
  width: 690rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #fff;
  margin: 20rpx auto 0;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  padding: 1rpx 30rpx 30rpx;
}
.page-wrap .card-list-item {
  margin-top: 30rpx;
  width: 300rpx;
  height: 122rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  box-sizing: border-box;
  padding-left: 15rpx;
  padding-right: 140rpx;
}
.page-wrap .card-list-item .title {
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 800;
  color: #051a2b;
}
.page-wrap .card-list-item .desc {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #051a2b;
}
.page-wrap .goods-list {
  display: flex;
  justify-content: space-between;
  padding: 14rpx 30rpx 10rpx;
}
.page-wrap .goods-list-col-item {
  width: 340rpx;
  border-radius: 30rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  box-shadow: 0 8rpx 15rpx rgba(0, 0, 0, 0.1);
  background: url("https://img.alicdn.com/imgextra/i1/2200676927379/O1CN015gexSL24NdcoF8oaQ_!!2200676927379.png") no-repeat;
  background-size: 100% 100%;
  padding: 20rpx;
}
.page-wrap .goods-list-col-item .pic {
  height: 340rpx;
  margin-bottom: 20rpx;
}
.page-wrap .goods-list-col-item .tag-list {
  padding: 1rpx 15rpx 0;
  display: flex;
  flex-flow: row wrap;
}
.page-wrap .goods-list-col-item .tag-list-item {
  border-radius: 20rpx;
  overflow: hidden;
  margin-right: 10rpx;
  margin-top: 10rpx;
  height: 40rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #eb989c;
  border: 2rpx solid #eb989c;
}
.page-wrap .goods-list-col-item .tag-list-item.zheng {
  color: #fff;
  background: #333333;
  border-color: #333333;
}
.page-wrap .goods-list-col-item .name {
  padding: 20rpx 30rpx;
  font-size: 16px;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
}
.page-wrap .goods-list-col-item .price-num {
  padding: 0rpx 30rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
}
.page-wrap .goods-list-col-item .price-num .price {
  font-size: 15px;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
}
.page-wrap .goods-list-col-item .price-num .price text {
  font-size: 20px;
  margin-left: 5rpx;
}
.page-wrap .goods-list-col-item .price-num .price text text {
  margin-left: 10rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  text-decoration: line-through;
  color: #edc736;
}
.page-wrap .goods-list-col-item .price-num .money {
  font-size: 13px;
  font-family: PingFang SC;
  font-weight: bold;
  color: #edc736;
  display: flex;
  align-items: center;
}
.page-wrap .goods-list-col-item .price-num .money image {
  width: 30rpx;
  margin-right: 5rpx;
}
.page-wrap .goods-list-col-item .price-num .num {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}

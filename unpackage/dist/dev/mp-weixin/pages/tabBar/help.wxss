.help-center-container {
  background-color: #f8f8f8;
  min-height: 100vh;
}
.help-center-container .banner {
  width: 100%;
  height: 300rpx;
  margin: 30rpx auto 0;
  margin-top: 90rpx;
}
.help-center-container .banner swiper-item {
  display: flex;
  justify-content: center;
}
.help-center-container .banner swiper-item .swiper-pic {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}
.help-center-container .faq-container {
  padding: 30rpx;
}
.help-center-container .faq-container .faq-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}
.help-center-container .faq-container .faq-list .faq-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
  padding: 15rpx 30rpx;
}
.help-center-container .faq-container .faq-list .faq-item .question {
  display: flex;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}
.help-center-container .faq-container .faq-list .faq-item .question .question-number {
  font-weight: bold;
  margin-right: 15rpx;
}
.help-center-container .faq-container .faq-list .faq-item .question .question-text {
  flex: 1;
}
.help-center-container .faq-container .faq-list .faq-item .answer {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}
.home-kefu {
  position: fixed;
  right: 20rpx;
  top: 22%;
  width: 100rpx;
  z-index: 1;
  border-radius: 50%;
}
.bgbox {
  background: url("https://img.alicdn.com/imgextra/i4/2200676927379/O1CN01oc0ERo24Ndd1Nu2Gk_!!2200676927379.png") no-repeat;
  background-size: 100% 100%;
  width: 540rpx;
  height: 680rpx;
}
.bgbox .off {
  text-align: right;
  padding: 15px;
  box-sizing: border-box;
}
.bgbox .content {
  margin-top: 60px;
  text-align: center;
  display: flex;
  justify-content: center;
}
.bgbox .content .ma {
  width: 156px;
  height: 156px;
}
.bgbox .content .ma image {
  width: 100%;
  height: 100%;
}
.bgbox .yi {
  text-align: center;
  font-size: 17px;
  color: #999;
  line-height: 26px;
  margin-top: 20px;

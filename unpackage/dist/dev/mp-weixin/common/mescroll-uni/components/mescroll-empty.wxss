.mescroll-empty {
  box-sizing: border-box;
  width: 100%;
  padding: 100rpx 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.mescroll-empty.empty-fixed {
  z-index: 99;
  position: absolute;
  /*transform会使fixed失效,最终会降级为absolute */
  top: 100rpx;
  left: 0;
}
.mescroll-empty .empty-icon {
  width: 280rpx;
  height: 280rpx;
}
.mescroll-empty .empty-tip {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: gray;
}
.mescroll-empty .empty-btn {
  display: inline-block;
  margin-top: 40rpx;
  min-width: 200rpx;
  padding: 18rpx;
  font-size: 28rpx;
  border: 1rpx solid #ea552d;
  border-radius: 60rpx;
  color: #ea552d;
}
.mescroll-empty .empty-btn:active {
  opacity: 0.75;
}
